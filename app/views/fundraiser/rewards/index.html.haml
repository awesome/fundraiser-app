.row
  .span12
    .konsta
      = image_tag 'konstantin.png'
      %p
        Bacon ipsum dolor sit amet chuck leberkas bacon, meatball spare ribs kielbasa pig frankfurter pork loin ball tip shankle boudin. Salami flank t-bone

.row
  .span12
    %h1
      Total Contribution:
      %span.total #{number_to_currency Fundraiser::Contribution.total_contributed}
      of
      %span #{number_to_currency Fundraiser::Settings.funding_goal}
      until
      %span.date #{Fundraiser::Settings.funding_end_date}
.row
  .span12.social
    %script{:src => "http://w.sharethis.com/button/buttons.js", :type => "text/javascript"}
    :javascript
      stLight.options({publisher: "1f6a2a22-dd71-4dcd-9825-4e472822e217", doNotHash: false, doNotCopy: false, hashAddressBar: false});
    %span.st_facebook_large{:displaytext => "Facebook"}
    %span.st_googleplus_large{:displaytext => "Google +"}
    %span.st_twitter_large{:displaytext => "Tweet"}
    %span.st_linkedin_large{:displaytext => "LinkedIn"}
    %span.st_fblike_large{:displaytext => "Facebook Like"}
    %span.st_pinterest_large{:displaytext => "Pinterest"}


.row
  .span5.offset2
    %h2
      Backed by
      %span.backers #{Fundraiser::Contribution.count}
      people
  .span4
    %h2 Choose a Reward
.row
  .span5.offset2
    .buy
      .over
        %p One moment please...
      %form#payment-form.form-horizontal{:action => '/manage_contributions.js', :method => "POST", "data-remote" => 'true'}
        .payment-errors
        .control-group
          %label.control-label
            = image_tag 'name.png'
          .controls
            %input.name{:size => "20", :type => 'text', :name => 'contributor[name]'}/
        .control-group
          %label.control-label
            = image_tag 'email.png'
          .controls
            %input.email{:size => "20", :type => 'text', :name => 'contributor[email]'}/
        .control-group
          %label.control-label
            = image_tag 'reward.png'
          .controls
            = select_tag 'contributor[amount]', options_from_collection_for_select(@rewards, "amount", "title")
        .control-group
          %label.control-label
            = image_tag 'card.png'
          .controls
            %input.card-number{:autocomplete => "off", :size => "20", :type => "text", :placeholder => '4242424242424242'}/
        .control-group
          %label.control-label
            = image_tag 'cvc.png'
          .controls
            %input.card-cvc.span1{:autocomplete => "off", :size => "4", :type => "text", :placeholder => "123"}/
        .control-group
          %label.control-label
            = image_tag 'expiration.png'
          .controls
            %input.card-expiry-month.span1{:size => "2", :type => "text", :placeholder => "MM"}/
            %input.card-expiry-year.span1{:size => "4", :type => "text", :placeholder => "YYYY"}/
        .control-group.button
          %button.submit-button{:type => "submit"}
            %span
            Submit Payment
            %span

  .span4
    #rewards
      = render @rewards

